{
	"compilerOptions": {
		"lib": [
			"es2017"
		],
		"moduleResolution": "Node",
		"target": "es2017",
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
        "noFallthroughCasesInSwitch": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
		"noImplicitAny": true,
        "experimentalDecorators": true,
	},
	"include": [
		"./**/*",
	],
}